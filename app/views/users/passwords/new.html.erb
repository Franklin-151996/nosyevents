<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	<div class="limiter">
		<div class="container-login100" style="background-image: url('images/bg-01.jpg');">
			<div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
				<form class="login100-form validate-form">
					<span class="login100-form-title p-b-49">
						Mots de passe oublier
					</span>

          			<div class="wrap-input100 validate-input m-b-23" data-validate = "Email non valide">
            			<label for="user_email" class="label-input100">Email</label>
            			<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input100", placeholder: "Entrer votre email"%>
            			<span class="focus-input100"></span>
          			</div>

          			<div class="container-login100-form-btn">
            			<div class="wrap-login100-form-btn">
              				<div class="login100-form-bgbtn"></div>
              					<button class="login100-form-btn">
                				Envoyer le lien de renouvellemnt
              					</button>
            				</div>
          				</div>
				</form>
			</div>
		</div>
	</div>
<% end %>

